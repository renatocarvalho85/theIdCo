<body>

    <header id="fh5co-header" role="banner">
        <div class="container text-center">
            <div id="fh5co-logo">
                <a href="index.html"><img src="~/images/logo2.png" alt="Present Free HTML5 Bootstrap Template"></a>
            </div>
            <nav>
                <ul>
                    <li><a href="about.html">About</a></li>
                    <li><a href="work.html">Work</a></li>
                    <li><a href="contact.html">Contact</a></li>
                    <li><a href="#">Instagram</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <!-- END #fh5co-header -->


    <div class="container-fluid pt70 pb70">
        <div id="fh5co-projects-feed" class="fh5co-projects-feed clearfix masonry">
            @foreach (var item in Model)
            {
                <div class="fh5co-project masonry-brick">
                    <h3> @Html.DisplayFor(modelItem => item.PostTitle) </h3>
                    <div>@Html.DisplayFor(modelItem => item.PostSubTitle)</div>
                    <div><img src="~/images/ImageProduct/@Html.DisplayFor(model => item.ProductsView.ProductImagePath)" class="img-fluid img-thumbnail"></div>
                    <div>@Html.DisplayFor(modelItem => item.PostDetails)</div>
                    <div><label>£</label>@Html.DisplayFor(modelItem => item.ProductsView.ProductPrice)</div>
                    <div>
                    <a asp-area="MaggiemCard" asp-controller="ShowPost" asp-action="ShowProductDetails" asp-route-id="@item.ProductsView.Id">Product Details</a>                       
                    </div>
                    @*<div>@Html.ActionLink("Product Details", "ShowProductDetails", new { id = item.ProductsView.Id}) </div>*@
                </div>
            }
        </div>
        <!--END .fh5co-projects-feed-->

    </div>

    <!-- END .container-fluid -->

    <footer id="fh5co-footer" role="contentinfo">
        <div class="container-fluid">
            <div class="footer-content">
                <div class="copyright"><small>&copy; 2016 Present. All Rights Reserved. <br>Designed by <a href=""></a> Images: <a href=""></a></small></div>
                <div class="social">
                    <a href="#"><i class="icon-facebook3"></i></a>
                    <a href="#"><i class="icon-instagram2"></i></a>
                    <a href="#"><i class="icon-linkedin2"></i></a>
                </div>
            </div>
        </div>
    </footer>
    <!-- END #fh5co-footer -->
