@model PortalMaggieCard.Models.ProductCategoryView

@{
    ViewData["Title"] = "CreateProductCategory";
}
@if (ViewData["Success"] != null)
{
    <div class="alert alert-success">
        <p><strong>Success:</strong> @ViewData["Success"].ToString()</p>
    </div>
}

<h2>CreateProductCategory</h2>

<h4>ProductCategoryView</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProductCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductCategoryName" class="control-label"></label>
                <input asp-for="ProductCategoryName" class="form-control" />
                <span asp-validation-for="ProductCategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
