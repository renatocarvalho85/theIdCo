@model PortalMaggieCard.Models.Product

@{
    ViewData["Title"] = "UpdateProduct";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
    </div>
}
<h2>UpdateProduct</h2>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateProduct" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductCod" class="control-label"></label>
                <input asp-for="ProductCod" class="form-control" />
                <span asp-validation-for="ProductCod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDetails" class="control-label"></label>
                <input asp-for="ProductDetails" class="form-control" />
                <span asp-validation-for="ProductDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductImageName" class="control-label"></label>
                <input asp-for="ProductImageName" class="form-control" />
                <span asp-validation-for="ProductImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="display-label">
                    @Html.DisplayNameFor(model => model.ProductImagePath)
                </div>
                <div class="thumbnail">
                    <input asp-for="ProductImagePath" class="form-control" />
                    <img src="/images/ImageProduct/@Model.ProductImagePath" class="img-fluid img-thumbnail" />
                </div>               
            </div>
            <div class="form-group">
                @Html.DisplayFor(model => model.Category.ProductCategoryName)
                @Html.DropDownListFor(model => model.CategoryId,Model.Categories,"Select the product category", new { @class="form-control"})
                
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
