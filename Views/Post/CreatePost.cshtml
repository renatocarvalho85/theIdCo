@model PortalMaggieCard.Models.PostView

@{
    ViewData["Title"] = "CreatePost";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
    </div>
}
@if (TempData["Fail"] != null)
{
    <div class="alert alert-danger">
        <p><strong>Fail:</strong> @TempData["Fail"].ToString()</p>
    </div>
}
<h2>Create Post</h2>

<h4>Post View</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PostTitle" class="control-label"></label>
                <input asp-for="PostTitle" class="form-control" />
                <span asp-validation-for="PostTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostSubTitle" class="control-label"></label>
                <input asp-for="PostSubTitle" class="form-control" />
                <span asp-validation-for="PostSubTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostDetails" class="control-label"></label>
                <input asp-for="PostDetails" class="form-control" />
                <span asp-validation-for="PostDetails" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="PostDate" class="control-label"></label>
                    <input asp-for="PostDate" class="form-control" />
                    <span asp-validation-for="PostDate" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                @Html.DisplayFor(model => model.PostCategoriesView.PostCategoryName)
                @Html.DropDownListFor(model => model.PostCategoryId, Model.OptionPostCategories, "Select Post Category", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DisplayFor(model => model.ProductsView.ProductName)
                @Html.DropDownListFor(model => model.productDbId, Model.OptionPoducts, "Select Product", new { @class = "form-control" })
            </div>
            @*<div class="form-group">
                <label asp-for="productDbId" class="control-label"></label>
                <input asp-for="productDbId" class="form-control" />
                <span asp-validation-for="productDbId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
