@inject SignInManager<DataAccess.Model.User> signManager
@inject UserManager<DataAccess.Model.User> UserManager

@if (signManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="ManageUser" asp-action="Index">@UserManager.GetUserName(User)</a>
            </li>
            <li>
                <button type="submit" class="btn btn-default navbar-btn navbar-link">Logout</button>
            </li>

        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li>
            <a asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    </ul>
}
