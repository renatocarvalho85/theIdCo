@model PortalMaggieCard.Models.Product

@{
    ViewData["Title"] = "CreateProduct";
}

<h2>CreateProduct</h2>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
            <div class="form-group">
                <label asp-for="ProductCod" class="control-label"></label>
                <input asp-for="ProductCod" class="form-control" />
                <span asp-validation-for="ProductCod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDetails" class="control-label"></label>
                <input asp-for="ProductDetails" class="form-control" />
                <span asp-validation-for="ProductDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(Model => Model.Categories)
                @Html.DropDownListFor(Model => Model.CategoryId, new SelectList(Model.Categories, "Id","ProductCategoryName"), "Select" )
                
            </div>
            <div class="form-group">
                <label asp-for="ProductImageName" class="control-label"></label>
                <input asp-for="ProductImageName" class="form-control" />
                <span asp-validation-for="ProductImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductImagePath" class="control-label"></label>
                <input asp-for="ProductImagePath" class="form-control" />
                <span asp-validation-for="ProductImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
